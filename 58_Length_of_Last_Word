'''
Given a string s consisting of words and spaces, return the length of the last word in the string.

A word is a maximal substring consisting of non-space characters only.

 

Example 1:

Input: s = "Hello World"
Output: 5
Explanation: The last word is "World" with length 5.
Example 2:

Input: s = "   fly me   to   the moon  "
Output: 4
Explanation: The last word is "moon" with length 4.
Example 3:

Input: s = "luffy is still joyboy"
Output: 6
Explanation: The last word is "joyboy" with length 6.
 

Constraints:

1 <= s.length <= 10^4
s consists of only English letters and spaces ' '.
There will be at least one word in s.
'''

import unittest

class Solution:
    def lengthOfLastWord(self, s: str) -> int:
        # Strip trailing spaces and split the string into words
        words = s.strip().split()
        # Return the length of the last word
        return len(words[-1]) if words else 0
        
# Testing:

class TestSolution(unittest.TestCase):
    def setUp(self):
        self.solution = Solution()

    def test_length_of_last_word(self):
        self.assertEqual(self.solution.lengthOfLastWord("Hello World"), 5)
        self.assertEqual(self.solution.lengthOfLastWord("   fly me   to   the moon  "), 4)
        self.assertEqual(self.solution.lengthOfLastWord("luffy is still joyboy"), 6)
        self.assertEqual(self.solution.lengthOfLastWord("   "), 0)  # Edge case with only spaces
        self.assertEqual(self.solution.lengthOfLastWord("a"), 1)  # Single character word
        self.assertEqual(self.solution.lengthOfLastWord(""), 0)  # Empty string
        self.assertEqual(self.solution.lengthOfLastWord("word1 word2 word3"), 5)
        self.assertEqual(self.solution.lengthOfLastWord("   leading spaces"), 6)
        self.assertEqual(self.solution.lengthOfLastWord("trailing spaces   "), 6) 
        self.assertEqual(self.solution.lengthOfLastWord("multiple   spaces   between"), 7) 
        self.assertEqual(self.solution.lengthOfLastWord("one"), 3) 
        self.assertEqual(self.solution.lengthOfLastWord("two words"), 5) 
        self.assertEqual(self.solution.lengthOfLastWord("   "), 0) # Only spaces

if __name__ == '__main__':
    unittest.main(exit=False)  # Use exit=False to prevent unittest from calling sys.exit()
